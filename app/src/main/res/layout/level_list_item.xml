<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="@dimen/max_width_level_preview"
        android:maxHeight="@dimen/max_height_level_preview"
        android:id="@+id/imageView_level_preview"
        android:adjustViewBounds="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_level_passed"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView_level_preview"
        android:layout_toEndOf="@+id/imageView_level_preview"
        android:maxWidth="@dimen/max_width_level_preview"
        android:maxHeight="@dimen/max_height_level_preview"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView_level_name"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="20dp"
        android:textStyle="bold"/>


</RelativeLayout>
